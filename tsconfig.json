{
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "importHelpers": true,
    "lib": ["esnext"],
    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "Server/*": ["src/server/*"],
      "Test/*": ["src/test/*"]
    }
  }
}
